set.seed(1234)
pin <- 1  # keep length <= 1
hyp <- pin/2
trials <- 10000
angle <- runif(trials, 0, 360)
pin.center <- runif(trials, 0, 1)
closest.line <- ifelse(pin.center <= 0.5, pin.center, 1-pin.center)
pin.tip <- abs(hyp * cos(angle))
touches <- ifelse(pin.tip >= closest.line, 1, 0)
sum(touches)/trials -> p
2/sum(touches)*10000
